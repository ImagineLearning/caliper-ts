{
	"name": "caliper-ts",
	"version": "1.0.0",
	"description": "Reference implementation of the Caliper Sensor API written in TypeScript",
	"repository": "git@github.com:ImagineLearning/caliper-ts.git",
	"author": "Imagine Learning",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/caliper-ts",
		"packages/caliper-ts-models"
	],
	"scripts": {
		"build": "yarn build:caliper-ts-models && yarn build:caliper-ts",
		"build:caliper-ts": "yarn workspace @imaginelearning/caliper-ts build",
		"build:caliper-ts-models": "yarn workspace @imaginelearning/caliper-ts-models build",
		"test:caliper-ts": "yarn workspace @imaginelearning/caliper-ts test",
		"test:caliper-ts-models": "yarn workspace @imaginelearning/caliper-ts-models test",
		"test:ci": "yarn test:ci:caliper-ts-models && yarn test:ci:caliper-ts",
		"test:ci:caliper-ts": "yarn workspace @imaginelearning/caliper-ts test:ci",
		"test:ci:caliper-ts-models": "yarn workspace @imaginelearning/caliper-ts-models test:ci",
		"lint": "eslint packages/**/*.{js,ts}",
		"format": "prettier --write **/*.{js,json,ts}"
	},
	"devDependencies": {
		"@imaginelearning/eslint-config": "^0.1.1",
		"@imaginelearning/prettier-config": "^0.1.1",
		"@typescript-eslint/eslint-plugin": "^4.16.1",
		"@typescript-eslint/parser": "^4.16.1",
		"babel-eslint": "^10.1.0",
		"eslint": "^7.21.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "^4.2.0",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"pretty-quick": "^3.1.0",
		"typescript": "^4.2.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged -p false"
		}
	},
	"lint-staged": {
		"*.(js|json|ts)": "pretty-quick --staged",
		"*.(js|ts)": "eslint"
	}
}
